<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ui.fragments.ComprasFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/theme_gradients_backgroun">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/uninacho">
        </ImageView>

    </RelativeLayout>



    <TextView
        android:id="@+id/preciototal"
        android:layout_width="210dp"
        android:layout_height="55dp"
        android:layout_marginTop="145dp"
        android:text="0"
        android:background="@color/red"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="40dp">
    </TextView>

    <TextView
        android:id="@+id/realizar"
        android:layout_width="285dp"
        android:layout_height="55dp"
        android:layout_marginTop="145dp"
        android:layout_marginLeft="208dp"
        android:text="compra"
        android:background="@color/azulclaro"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="40dp">
    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="215dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/recyclerviewcompra">
    </androidx.recyclerview.widget.RecyclerView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/buttonnavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_orange"
        android:layout_marginTop="937dp"
        app:itemIconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstrains"
        app:menu="@menu/menu_navigaton_bar" >

    </com.google.android.material.bottomnavigation.BottomNavigationView>


</FrameLayout>